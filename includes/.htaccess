# Security - Prevent direct access to include files
<FilesMatch "\.(php|inc)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Allow access to config.php for includes
<Files "config.php">
    Order allow,deny
    Allow from all
</Files>

# Enable error logging (optional)
php_flag log_errors on
php_value error_log ../logs/php_errors.log